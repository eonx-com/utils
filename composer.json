{
  "name": "eonx-com/utils",
  "description": "Utility and helper classes",
  "keywords": [
    "eoneopay",
    "utilities",
    "helpers"
  ],
  "license": "BSD-3-Clause",
  "type": "library",
  "require": {
    "php": ">=7.1",
    "ext-dom": "*",
    "ext-json": "*",
    "ext-libxml": "*"
  },
  "require-dev": {
    "ext-bcmath": "*",
    "ext-simplexml": "*",
    "doctrine/annotations": "^1.6",
    "eoneopay/standards": "dev-master",
    "illuminate/http": "^5.8",
    "illuminate/routing": "^5.8",
    "illuminate/support": "^5.5",
    "indigophp/doctrine-annotation-autoload": "^0.1.0",
    "mockery/mockery": "^1.0",
    "phpmd/phpmd": "^2.6",
    "phpstan/phpstan": "^0.11",
    "phpunit/phpunit": "^7.0",
    "ramsey/uuid": "^3.8",
    "roave/security-advisories": "dev-master",
    "sebastian/phpcpd": "^4.0",
    "squizlabs/php_codesniffer": "3.*"
  },
  "replace": {
    "eoneopay/utils": "self.version"
  },
  "autoload": {
    "psr-4": {
      "EoneoPay\\Utils\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\EoneoPay\\Utils\\": "tests/"
    }
  },
  "suggest": {
    "doctrine/annotations": "Required to use the annotation reader",
    "ext-bcmath": "To use the Math service",
    "ext-simplexml": "To test whether a string is xml",
    "indigophp/doctrine-annotation-autoload": "Recommended to autoload custom doctrine annotations",
    "illuminate/support": "Required to use the configuration service provider in Lumen",
    "ramsey/uuid":"Required for uuid generation"
  },
  "minimum-stability": "stable",
  "config": {
    "optimize-autoloader": true,
    "sort-packages": true
  }
}
